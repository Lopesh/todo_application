<div class="container-fluid">

<div class="container">
  <!-- Title -->
  <div class="d-flex justify-content-between align-items-center py-3">
    <h2 class="h5 mb-0"><a href="#" class="text-muted"></a>#<%= "#{@task.id} - #{@task.title}" %></h2>
  </div>

  <!-- Main content -->
  <div class="row">
    <div class="col-lg-8">
      <!-- Details -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="mb-3 d-flex justify-content-between">
            <div>
              <span class="me-3" style="margin-left: 10px;"> Status </span> 
              <span class="badge rounded-pill bg-info"><%= @task.status.titleize %></span>
            </div>
             
          </div>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>
                  <span class="me-3"> Description </span> 
                  <div class="d-flex mb-2"> 

                    <div class="flex-lg-grow-1 ms-3"  style="margin-left: 2px !important;">
                      <h6 class="small mb-0"><%= @task.description %> </h6> 
                    </div>
                  </div>
                </td> 
              </tr>
            </tbody>
             <tfoot>
              <tr>
                <td colspan="2">Dead Line</td>
                <td class="text-end"><%= @task.deadline.strftime("%m/%d/%Y %H:%M")%></td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
      <!-- Payment -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <h3 class="h6">Comments</h3>
              <p>This task is on priority. Please complete it as soon as possible
            </div> 
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <!-- Customer Notes -->
      <div class="card mb-4">
        <div class="card-body">
          <h3 class="h6">Assigned To</h3>
          <p><%= "#{@task.user.first_name} #{@task.user.last_name}"%></p>
        </div>
      </div> 
    </div>
  </div>
</div>
  </div>