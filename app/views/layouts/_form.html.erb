<style type="text/css">
  .gradient-custom-2 {
/* fallback for old browsers */
  background: #fccb90;

/* Chrome 10-25, Safari 5.1-6 */
  background: -webkit-linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);

/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
}

.full-width{
  width: 100%;
}

@media (min-width: 768px) {
  .gradient-form {
    height: 100vh !important;
  }
}
@media (min-width: 769px) {
  .gradient-custom-2 {
    border-top-right-radius: .3rem;
    border-bottom-right-radius: .3rem;
  }
}
</style>
<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                    style="width: 185px;" alt="logo">
                  <h4 class="mt-1 mb-5 pb-1">We are The Lotus Team</h4>
                </div> 
                <% 
                    is_login_form = locals[:form_type] == "log_in"
                    @url = is_login_form ? session_path(resource_name) : registration_path(resource_name) %>
                <% if resource.errors.present? %> 
                  <ul class="alert" style="list-style-type:none; background-color: lightpink;">
                    <% resource.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                <% end %>
                <%= form_for(resource, as: resource_name, url: @url) do |f| %>
                  <% if notice %>
                    <p class="notice" style="background-color: lightorange;"><%= notice %></p>
                  <% end %>
                  <% if alert %>
                    <p class="alert" style="background-color: lightpink;"><%= alert %></p> 
                  <% end %>

                  <% unless is_login_form %>
                    <div class="form-outline mb-4">
                      <%= f.label :first_name, class: "form-label" %> 
                      <%= f.text_field :first_name, autocomplete: "first_name", class:"form-control", required: true %>
                    </div>
                    <div class="form-outline mb-4">
                      <%= f.label :last_name, class: "form-label" %> 
                      <%= f.text_field :last_name, autocomplete: "last_name", class:"form-control", required: true %>
                    </div>
                  <% end %>
                  <div class="form-outline mb-4">
                    <%= f.label :email, class: "form-label" %> 
                    <%= f.email_field :email, autocomplete: "email", class:"form-control", required: true %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :password, class: "form-label" %>
                    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", required: true %> 
                  </div>

                  <% unless is_login_form %>
                    <div class="form-outline mb-4">
                    <%= f.label :password_confirmation, class: "form-label" %>
                      <%= f.password_field :password_confirmation, autocomplete: "current-password", class:"form-control", required: true %> 
                    </div>
                  <% end %>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <%= f.submit locals[:form_type].titleize, class: "btn btn-primary btn-block  gradient-custom-2 mb-3 full-width" %>
                  </div>
               <% end %>
                <div class="d-flex align-items-center justify-content-center pb-4">
                  
                  <% if is_login_form %>
                    <p class="mb-0 me-2">Don't have an account?</p> 
                    <%= button_to "Create new", new_user_registration_path, class: "btn btn-outline-danger", method: "get"%>
                  <% else%>
                    <p class="mb-0 me-2">Do you have an account?</p> 
                    <%= button_to "Log In", new_user_session_path, class: "btn btn-outline-danger", method: "get"%>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">We are more than just a company</h4>
                <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                  tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                  exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>